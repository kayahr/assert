{
    "$schema": "https://json.schemastore.org/package",
    "name": "@kayahr/assert",
    "version": "1.0.0",
    "type": "module",
    "description": "A large collection of generic TypeScript assert functions which can be used in unit tests but also in production code to validate inputs for example.",
    "keywords": [
        "assert",
        "typescript",
        "unit",
        "test"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kayahr/assert.git"
    },
    "homepage": "https://github.com/kayahr/assert",
    "bugs": "https://github.com/kayahr/assert/issues",
    "funding": "https://github.com/kayahr/assert?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": "./lib/main/index.js",
    "scripts": {
        "clean": "rm -rf lib",
        "build": "run build:*",
        "build:compile": "tsc",
        "test": "run test:*",
        "test:unit": "ntest",
        "test:apidoc": "typedoc --emit none --treatWarningsAsErrors",
        "test:lint": "oxlint --type-aware --deny-warnings",
        "test:spell": "cspell --color --no-progress",
        "apidoc": "typedoc",
        "prepare": "run clean build"
    },
    "devDependencies": {
        "@kayahr/cspell": "9.2.1-bundle.2",
        "@kayahr/npm-utils": "0.0.2",
        "@kayahr/ntest": "1.0.0",
        "@kayahr/oxlint-config": "1.0.2",
        "@types/node": "24.3.1",
        "typedoc": "0.28.12",
        "typedoc-github-theme": "0.3.1",
        "typedoc-plugin-mdn-links": "5.0.9",
        "typescript": "5.9.2"
    }
}
